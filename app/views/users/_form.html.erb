<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.header', :count=>@user.errors.count,
:model=>t('activerecord.models.user')) %>: </h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="control-group">
    <%= f.label (t '.name'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field input-xlarge' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label (t '.email'), :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'text_field input-large' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label (t '.password'), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field input-small' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label (t '.password_confirm'), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field input-small' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label (t '.address'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :address, rows: 3, :class => 'text_area input-large' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label (t '.occupation'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :occupation, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label (t '.birthday'), :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :birthday, :class => 'option-small', :start_year => 1900, end_year: Time.now.year %>

    </div>
  </div>
  
  <% if session[:user_id]  %>
  <% if  @user_conect.administrator %>
  <div class="control-group">
    <%= f.label (t '.administrator'), :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :administrator, :class => 'check_box' %>
    </div>
  </div>
  <% end %>
  <% end %>

  <div class="form-actions">
    <%= f.submit (t '.submit'), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
