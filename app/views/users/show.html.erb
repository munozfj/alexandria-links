<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.page_title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('.name') %>:</strong></dt>
  <dd><%= @user.name %></dd>

  <dt><strong><%= t('.email') %>:</strong></dt>
  <dd><%= @user.email %></dd>

  <dt><strong><%= t('.address') %>:</strong></dt>
  <dd><%= @user.address %></dd>

  <dt><strong><%= t('.occupation') %>:</strong></dt>
  <dd><%= @user.occupation %></dd>
  
  <dt><strong><%= t('.birthday') %>:</strong></dt>
  <dd><%= @user.birthday %></dd>

  <dt><strong><%= t('.administrator') %>:</strong></dt>
  <dd><%= @user.administrator %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-success'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
