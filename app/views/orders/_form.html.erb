<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.header', :count=>@order.errors.count,
:model=>t('activerecord.models.order')) %>: </h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label (t('.name')), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field input-xlarge' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label (t('.address')), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :address, :class => 'text_area input-xlarge', rows: 3 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label (t('.email')), :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'email_field input-xlarge' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label (t('.pay_type')), :class => 'control-label' %>
    <div class="controls">
      <%= f.select :pay_type, Order::PAYMENT_TYPES,
                   :prompt => (t('.select_type')) %>

    </div>
  </div>

  <div class="form-actions">
    <%= f.submit (t('.submit')), :class => 'btn btn-primary' %>
  </div>
<% end %>



