<!DOCTYPE html>
<html lang="en">
  <head>
    
    <title><%= content_for?(:title) ? yield(:title) : "Alexandria Links" %></title>

    <%= csrf_meta_tags %>
    <%= render 'layouts/meta'  %>
    <%= render 'layouts/shim'  %>
    <%= render 'layouts/icons' %>

    <%= stylesheet_link_tag "application", :media => "all" %>
  </head>
  <body>

    <%= render 'layouts/header' %>

    <div class="container-fluid">
      <div class="row-fluid">
        
        <div class="span9">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>

        <div class="span3">
          <%= render 'layouts/sidebar' %>
        </div>

      </div>

      <%= render 'layouts/footer' %>

      <%= render 'layouts/modal_alex' %>
      <%= render 'layouts/modal_acknowledgments' %>

    </div> <!-- /container -->

    <%= javascript_include_tag "application" %>

  </body>
</html>
