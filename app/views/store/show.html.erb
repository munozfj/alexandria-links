<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.page_title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t '.title' %>:</strong></dt>
  <dd><%= @book.title %></dd>
  <dt><strong>autor:</strong></dt>
  <dd><%= @book.author %></dd>
  <dt><strong>descr:</strong></dt>
  <dd><%= @book.description %></dd>
  <dt><strong>price:</strong></dt>
  <dd><%=number_to_currency(@book.price)%></dd>

  <dt><strong><%= t '.pic'  %>:</strong></dt>
  <dd><%= image_tag @book.pic.url(:medium) %></dd>
   <br/>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn btn-success'  %>
</div>
