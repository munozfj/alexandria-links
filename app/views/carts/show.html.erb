<div id="cart">
<h2>Your Cart</h2>

<table >
  <%= render (@cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>


<%= link_to raw("<i class=\"icon-trash\"></i>"), @cart, class: "btn btn-medium btn-danger", method: :delete,
    data: { confirm: 'Are you sure?' } %>

</div>


