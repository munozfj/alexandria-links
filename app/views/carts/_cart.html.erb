<div class="cart-title" >Your Cart</div>

<table class="table-striped">
  <%= render(cart.line_items) %>

  <tr class="total-line" >
    <td colspan="2" >Total</td>
    <td class="total-cell" ><%= number_to_currency(cart.total_price) %></td>
  </tr>

</table>



<%= link_to raw("<i class=\"icon-trash\"></i>"), cart, class: "btn btn-medium btn-danger", method: :delete,
    data: { confirm: 'Are you sure?' } %>

<%= link_to raw("<i class=\"icon-ok\"></i>"), new_order_url, class: "btn btn-medium btn-info", method: :get %>

    

