<div class="page-header">
  <h1>Please Log In</h1>
</div>
<%= form_tag do  %>
  <div class="control-group">
    <%= label_tag :email, "E-mail", :class => 'control-label' %>
    <div class="controls">
      <%= email_field_tag :email, params[:email] ,:class => 'text_field input-large' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, "Password", :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, params[:password] ,:class => 'text_field input-large' %>
    </div>
  </div>

  <div>
        <%= submit_tag "Login",:class => "btn btn-primary" %>
      </div>
 
<% end %>
